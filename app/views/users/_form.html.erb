<div class="row">
    <div class="col-lg-12 text-center">
      <h1>Sign Up</h1>


      <% unless @user %>
        <% @user = User.new %>
      <% end %>

      <div class="user-form-errors">
        <% if @user.errors.any? %>
          <p>Oops - there were problems with your submission. Please fix the following:</p>
          <ul>
            <% @user.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        <% end %>
      </div>

      <div class="user-form">
        <%= form_for @user do |f| %>

          <div class="field">
            <%= f.label :first_name %> <br />
            <%= f.text_field :first_name %>
          </div>

          <div class="field">
            <%= f.label :last_name %> <br />
            <%= f.text_field :last_name %>
          </div>

          <div class="field">
            <%= f.label :gender %> <br />
            <%= f.select :gender, [['Male','Male'],['Female','Female'], ['Other','Other']] %>
          </div>

          <div class="field">
            <%= f.label :date_of_birth %> <br />
            <%= f.date_select :date_of_birth, start_year: 1940, end_year: Date.today  .year %>
          </div>

          <div class="field">
            <%= f.label :email %> <br />
            <%= f.text_field :email %>
          </div>

          <div class="field">
            <%= f.label :phone_number %> <br />
            <%= f.text_field :phone_number, :placeholder => "123 456 7891" %>
          </div>

          <div class="field">
             <%= f.label :password %><br />
             <%= f.password_field :password %>
          </div>

          <div class="field">
             <%= f.label :password_confirmation %><br />
             <%= f.password_field :password_confirmation %>
          </div>

          <div class="field">
             <%= f.label :avatar %><br />
             <%= f.file_field :avatar %>
          </div>

          <div class="field">
            <%= f.submit "Save" %>
          </div>

        <% end %>
      </div>
    </div>
</div>
<!-- /.row -->
